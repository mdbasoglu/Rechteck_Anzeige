        <TextBox x:Name="txtHoehe" HorizontalAlignment="Left" Height="26" Margin="142,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="600" FontSize="16" TextChanged="TextChanged"/>
        <Button x:Name="btnAnzeigen" Content="anzeigen" HorizontalAlignment="Left" Height="30" Margin="642,187,0,0" VerticalAlignment="Top" Width="100" FontSize="18" Click="btnAnzeigen_Click" IsEnabled="False"/>
        <Label x:Name="lblMeldung" Content="" HorizontalAlignment="Left" Height="35" Margin="142,187,0,0" VerticalAlignment="Top" Width="400" FontSize="18" Foreground="Red"/>
        <Label x:Name="lblFlaeche" Content="" HorizontalAlignment="Left" Height="29" Margin="166,249,0,0" VerticalAlignment="Top" Width="140" FontSize="18"/>
        <Label x:Name="lblUmfang" Content="" HorizontalAlignment="Left" Height="29" Margin="166,306,0,0" VerticalAlignment="Top" Width="140" FontSize="18"/>

    </Grid>
</Window>
